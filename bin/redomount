#!/bin/bash
set -eux
sudo umount /ephemeral
sudo rm -rf /ephemeral
sudo mkdir -p /ephemeral
#sudo mkfs.ext4 -q -F -L EPHEMERAL -m 0 -M /ephemeral -O dir_index,extent,sparse_super -E lazy_itable_init=0,lazy_journal_init=0 -T news /dev/md0
sudo mkfs.ext4 -q -F -L EPHEMERAL -m 0 -M /ephemeral -O dir_index,extent,sparse_super -T news /dev/md0
sudo mount -o defaults,noatime,nodiratime,nobarrier,delalloc,discard,inode_readahead_blks=64,min_batch_time=1000,max_batch_time=100000,commit=5 /dev/md0 /ephemeral
sudo chown -R rmoore:rmoore /ephemeral
